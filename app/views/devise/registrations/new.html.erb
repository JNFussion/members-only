
<div class="section has-background-light">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-4 box">
          <h1 class="title has-background-primary p-1">Sign up</h1>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            
            <div class="field">
              <div class="control">
                <%= f.input :name, required:true, autofocus: true, label_html: {class: "label"}, input_html: {class: "input"}, wrapper: false%>
              </div>
            </div>
            
            <div class="field">
              <div class="control">
                <%= f.input :username, required:true, label_html: {class: "label"}, input_html: {class: "input"}, wrapper: false%>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :email, required:true, label_html: {class: "label"}, input_html: {class: "input"}, wrapper: false, placeholder: "example@email.com"%>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :password, required:true, label_html: {class: "label"}, input_html: {class: "input", autocomplete: "new password"}, wrapper: false,  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)%>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :password_confirmation, required:true, label_html: {class: "label"}, input_html: {class: "input"}, wrapper: false%>
              </div>
            </div>

            <div class="field has-background-primary p-2">
              <div class="control">
                <%= f.submit "Sign Up", class: "button is-light"%>
              </div>
            </div>
            
          <% end %>
          <br>
          <%= render "devise/shared/links"%>
          <%= link_to "Back", :back, class: "has-text-primary"%>
        </div>
      </div>
    </div>
  </div>

