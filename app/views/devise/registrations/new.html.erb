
<div class="section">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-4 box">
          <h1 class="title">Sign up</h1>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            
            <div class="field">
              <div class="control">
                <%= f.input :name, required:true, autofocus: true, label_html: {class: "label"}, input_html: {class: "input"}, wrapper: false%>
              </div>
            </div>
            
            <div class="field">
              <div class="control">
                <%= f.input :username, required:true, label_html: {class: "label"}, input_html: {class: "input"}, wrapper: false%>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :email, required:true, label_html: {class: "label"}, input_html: {class: "input"}, wrapper: false, placeholder: "example@email.com"%>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :password, required:true, label_html: {class: "label"}, input_html: {class: "input"}, wrapper: false,  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)%>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :password_confirmation, required:true, label_html: {class: "label"}, input_html: {class: "input"}, wrapper: false%>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.submit "Sign Up", class: "button"%>
              </div>
            </div>


          <% end %>
          
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>

