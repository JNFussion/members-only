<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4 box">
        <h1 class="title has-background-primary p-1">Log in</h1>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="field">
            <div class="control">
              <%= f.input :email, required: false, label_html: {class: "label"}, input_html: {class: "input"}, wrapper: false %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password, required: false, label_html: {class: "label"}, input_html: {class: "input"}, wrapper: false %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :remember_me,wrapper: false, as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>

          <div class="field has-background-primary p-2">
            <div class="control">
              <%= f.button :submit, "Log in", class: "button is-light" %>
            </div>
          </div>

        <% end %>
        <br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
